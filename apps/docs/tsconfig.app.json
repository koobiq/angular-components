{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "paths": {
            "@koobiq/cdk/*": ["../../dist/cdk/*"],
            "@koobiq/components/*": ["../../dist/components/*"],
            "@koobiq/components-experimental/*": ["../../dist/components-experimental/*"],
            "@koobiq/angular-moment-adapter/*": ["../../dist/angular-moment-adapter/*"],
            "@koobiq/angular-luxon-adapter/*": ["../../dist/angular-luxon-adapter/*"],
            "@koobiq/docs-examples": ["../../dist/docs-examples"]
        },
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*.d.ts"
    ],
    "files": [
        "src/main.ts",
        "src/main.server.ts",
        "server.ts"
    ],
    "exclude": [
        "src/**/*.spec.ts",
        "src/assets/stackblitz"
    ]
}
