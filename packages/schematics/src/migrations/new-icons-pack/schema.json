{
    "$schema": "http://json-schema.org/schema",
    "$id": "koobiq-components-new-icons-pack",
    "title": "koobiq-components new-icons-pack schematic",
    "type": "object",
    "properties": {
        "project": {
            "type": "string",
            "description": "Name of the project",
            "$default": {
                "$source": "projectName"
            }
        },
        "fix": {
            "type": "boolean",
            "description": "Whether overwrite icons prefixes or simply inform in console",
            "default": false
        },
        "stylesExt": {
            "type": "string",
            "description": "Use this option to specify styles extension preferred in your project",
            "default": "scss"
        },
        "updatePrefix": {
            "type": "boolean",
            "description": "Whether to change icon prefixes",
            "default": false
        },
        "customDataPath": {
            "type": "string",
            "description": "Use this option to specify styles extension preferred in your project"
        },
        "customIconReplacementPath": {
            "type": "string",
            "description": "Use this option to specify styles extension preferred in your project"
        }
    }
}
