{
    "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
    "version": "0.2",
    "useGitignore": true,
    "enableGlobDot": true,
    "readonly": true,
    "ignorePaths": [
        "**/dist/**",
        "**/node_modules/**",
        "**/CHANGELOG.md",
        "**/public_api_guard/**"
    ],
    "import": [
        "tools/cspell-locales/en.json",
        "tools/cspell-locales/ru.json"
    ],
    "dictionaries": [
        "fonts",
        "fullstack",
        "markdown",
        "software-terms"
    ]
}
